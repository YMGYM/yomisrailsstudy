<h1>
  게시글 수정하기
</h1>

<form action="/posts/<%= @post.id %>/update" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" value="<%= @post.title %>" name="title"><br />
  <textarea name="content"><%= @post.content %></textarea><br />
  <input type="submit">
</form>